{
	"name": "phpstack",
	"title": "PHPStack",
	"description": "Prisma + Hono + pnpm. Absolutely no relation to the other PHP.",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"preview": "node dist/index.js",
		"fix": "biome check --write",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf node_modules"
	},
	"dependencies": {
		"@hono/node-server": "^1.15.0",
		"@hono/zod-openapi": "^0.19.9",
		"@scalar/hono-api-reference": "^0.9.9",
		"@scalar/openapi-to-markdown": "^0.2.19",
		"@t3-oss/env-core": "^0.13.8",
		"hono": "^4.8.4",
		"http-status-codes": "^2.3.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@types/node": "^24.0.10",
		"better-sqlite3": "^12.2.0",
		"chalk": "^5.4.1",
		"rimraf": "^6.0.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"module": "src/index.js",
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
