{
	"name": "php",
	"title": "PHp*",
	"description": "Prisma + Hono + pnpm. Absolutely no relation to the other PHP.",
	"repository": {
		"type": "git",
		"url": "https://github.com/bedtime-coders/php"
	},
	"type": "module",
	"scripts": {
		"dev": "dotenvx run -- tsx watch src/index.ts",
		"build": "tsc",
		"preview": "node dist/index.js",
		"fix": "biome check --write",
		"check": "biome check",
		"check:errors": "biome check --diagnostic-level=error",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf node_modules",
		"db": "prisma",
		"db:dev": "prisma dev",
		"db:migrate": "prisma migrate dev",
		"db:reset": "prisma migrate reset",
		"db:generate": "prisma generate",
		"db:push": "prisma db push",
		"db:studio": "prisma studio"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.46.0",
		"@hono/node-server": "^1.15.0",
		"@hono/zod-openapi": "^0.19.9",
		"@prisma/client": "6.11.1",
		"@scalar/hono-api-reference": "^0.9.9",
		"@scalar/openapi-to-markdown": "^0.2.19",
		"@t3-oss/env-core": "^0.13.8",
		"argon2": "^0.43.0",
		"bcrypt": "^6.0.0",
		"camelcase": "^8.0.0",
		"hono": "^4.8.4",
		"jose": "^6.0.11",
		"radashi": "^12.6.0",
		"type-fest": "^4.41.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/argon2": "^0.15.4",
		"@types/bcrypt": "^5.0.2",
		"@types/node": "^24.0.10",
		"chalk": "^5.4.1",
		"prisma": "^6.11.1",
		"rimraf": "^6.0.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vitest": "^3.2.4"
	},
	"module": "src/index.js",
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
